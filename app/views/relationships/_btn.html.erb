<!--フォロー機能の追加-->
<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: url_options[:class].presence || "btn btn-primary follow-link" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: url_options[:class].presence || "btn btn-success follow-link" %>
  <% end %>
<% end %>